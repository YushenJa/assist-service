{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "allowJs": false,

    "rootDir": "src",
    "outDir": "dist",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,

    "skipLibCheck": true,

    "types": ["node"]
  },

  "include": ["src"],

  "exclude": ["node_modules", "dist"]
}
